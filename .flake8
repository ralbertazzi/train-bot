[flake8]
exclude = .venv, node_modules
ignore =
    # E203 whitespace before ':' (gets overwritten by Black)
    E203
    # E501: line too long  (unfortunately Black doesn't format comment lines)
    E501
    # E731 do not assign a lambda expression, use a def
    E731
    # W503: line break before binary operator (in conflict with Black)
    W503
max-complexity = 10
